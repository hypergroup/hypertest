#!/usr/bin/env node

// TODO use commander to parse arguments list mocha https://github.com/visionmedia/mocha/blob/master/bin/_mocha

var hypertest = require('..');

var path = process.argv[2];
if (!path) error('Error: missing path to test file');

hypertest(path, {}, function(err) {
  if (err) error(err.stack);
});

function error() {
  console.error.apply(console, arguments);
  process.exit(1);
}